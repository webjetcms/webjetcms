include ../pug/mixins

doctype html
html.pg-homepage(data-th-lang="${layout.lng}")

  head
    include ./head
    include ../modals/datatables-data-import
    include ../modals/datatables-data-export
    include ../modals/iframe

  body

    div.ly-page-wrapper

        div(id="toast-container-logoff" class="toast-container toast-top-full-width")

        div.ly-header
            include ./header

        div.ly-sidebar
            include ./sidebar

        div.ly-content-wrapper
            div.ly-content(data-scrollbar)
                div.ly-container.container

                    div.breadcrumb-language-select(style="display:none")
                        select(name="languageSelect" id="breadcrumbLanguageSelect")
                            option(data-th-each="language : ${layoutService.getLanguages(false, true, 'language.append')}" data-th-text="${language.label}" data-th-value="${language.value}" data-th-selected="${language.value==layout.lngWebjet}")

                    block content