<?xml version="1.0" encoding="UTF-8"?>

<poolman><management-mode>local</management-mode>
    <datasource>
        <dbname>iwcm</dbname>
        <jndiName>jndi-iwcm</jndiName>
        <driver>org.mariadb.jdbc.Driver</driver>

        <url>jdbc:mariadb://host.docker.internal:13306/webjetcms</url>

