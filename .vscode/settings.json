{
    "java.configuration.updateBuildConfiguration": "automatic",
    "git.ignoreLimitWarning": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "markdown.validate.enabled": true,
    "java.compile.nullAnalysis.mode": "automatic",
    "sqltools.useNodeRuntime": true,
    "sqltools.connections": [
        {
            "oracleOptions": {
                "autoCommit": true,
                "lowerCase": false
            },
            "previewLimit": 50,
            "server": "oracle.local",
            "port": 1521,
            "driver": "Oracle",
            "name": "WEBJET2022_WEB",
            "database": "pdb19c",
            "username": "WEBJET2022_WEB",
            "password": "************"
        },
        {
            "previewLimit": 50,
            "server": "postgresql.local",
            "port": 10082,
            "driver": "PostgreSQL",
            "name": "pgsql-cms",
            "database": "postgres",
            "username": "postgres"
        }
    ],
    "gitPrefix.pattern": ".*/(\\d+)-.*",
    "coverage-gutters.coverageBaseDir": "docs/codecoverage-report/",
    "coverage-gutters.coverageReportFileName": 	"docs/codecoverage-report/index.html",
    "terminal.integrated.shellIntegration.enabled": false,

    "spellright.language": [ "sk_SK" ],
    "spellright.groupDictionaries": false,
    "spellright.documentTypes": [
        "markdown"
    ],
    "spellright.suggestionsInHints": false,
    "spellright.ignoreRegExpsByClass": {
        "markdown": [ "/\\[[^]*?\\]/g", "/\\([^]*?\\)/g"]
    },
    "github.copilot.chat.commitMessageGeneration.instructions":[
        {
            "text": "Use conventional commit message format."
        },
        {
